<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Notes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/" method="post" enctype="multipart/form-data">

        <div class="modal-body">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="Your notes title" name='title'>
            <label for="floatingInput">Title</label>
          </div>

          <div class="form-floating">
            <textarea class="form-control" placeholder="Leave your notes here" id="floatingTextarea2" style="height: 300px" name='description'></textarea>
            <label for="floatingTextarea2">Notes</label>
          </div>
          <div> Upload image:  <input type="file" name="image" required/></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger btn-sm fw-bold" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary btn-sm fw-bold">Save changes</button>
        </div>

      </form>

    </div>
  </div>
</div>
